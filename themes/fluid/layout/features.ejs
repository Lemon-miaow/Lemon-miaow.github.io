<%
page.layout = "features"
page.title = theme.features.title || __('features.title')
page.subtitle = theme.features.subtitle || __('features.subtitle')
page.banner_img = theme.features.banner_img
page.banner_img_height = theme.features.banner_img_height
page.banner_mask_alpha = theme.features.banner_mask_alpha
page.comment = theme.features.comments.type
%>

<div class="row features">
  <% for(const each of theme.features.items || []) { %>
    <% if (!each.title || !each.link) continue %>
    <div class="card col-lg-4 col-md-6 col-sm-12">
      <a href="<%= url_for(each.link) %>" class="card-body hover-with-bg" target="_blank" rel="noopener">
        <div class="card-content">
          <% if (each.avatar || each.image) { %>
            <div class="link-avatar my-auto">
              <img src="<%= url_for(each.avatar || each.image) %>" alt="<%= each.title %>"
                   onerror="this.onerror=null; this.src=this.srcset='<%= url_for(theme.features.onerror_avatar) %>'"/>
            </div>
          <% } %>
          <div class="link-text">
            <div class="link-title"><%- each.title %></div>
            <div class="link-intro"><%- each.intro || '' %></div>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<% if(theme.features.custom && theme.features.custom.enable && theme.features.custom.content) { %>
  <!-- Custom -->
  <div class="custom mx-auto">
    <%- theme.features.custom.content %>
  </div>
<% } %>

<%- inject_point('featuresComments') %>
